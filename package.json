{
  "name": "easycode",
  "displayName": "",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./build/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "easyCode.json-to-ts-interface",
        "title": "生成Interface"
      },
      {
        "command": "easyCode.to-CRUD",
        "title": "生成CRUD"
      },
      {
        "command": "easyCode.to-search-form",
        "title": "生成搜索表单"
      },
      {
        "command": "easyCode.to-table",
        "title": "生成Table"
      },
      {
        "command": "easyCode.to-edit-form",
        "title": "生成可编辑表单"
      },
      {
        "command": "easyCode.to-description",
        "title": "生成详组件"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "easyCode.json-to-ts-interface",
          "group": "easy-generator",
          "when": "resourceExtname == .json"
        }
      ],
      "editor/context": [
        {
          "command": "easyCode.to-CRUD",
          "group": "easy-generator",
          "when": "resourceLangId == typescript && editorHasSelection"
        },
        {
          "command": "easyCode.to-search-form",
          "group": "easy-generator",
          "when": "resourceLangId == typescript && editorHasSelection"
        },
        {
          "command": "easyCode.to-table",
          "group": "easy-generator",
          "when": "resourceLangId == typescript && editorHasSelection"
        },
        {
          "command": "easyCode.to-edit-form",
          "group": "easy-generator",
          "when": "resourceLangId == typescript && editorHasSelection"
        },
        {
          "command": "easyCode.to-description",
          "group": "easy-generator",
          "when": "resourceLangId == typescript && editorHasSelection"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/pluralize": "^0.0.27",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "@appworks/project-service": "^0.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "ejs": "^3.1.8",
    "es7-shim": "^6.0.0",
    "faker": "^6.6.6",
    "hash.js": "^1.0.3",
    "json-to-ts": "^1.7.0",
    "lodash.camelcase": "^4.3.0",
    "lodash.upperfirst": "^4.3.1",
    "pluralize": "^3.1.0"
  }
}
